{
  "aws": {
    "Version": "2012-10-17",
    "Statement": [
      {
        "Action": [
          "logs:CreateLogGroup",
          "logs:CreateLogStream",
          "logs:PutLogEvents"
        ],
        "Resource": "arn:aws:logs:*:*:*",
        "Effect": "Allow"
      },
      {
        "Action": ["sns:Publish"],
        "Resource": "arn:aws:sns:*:*:*",
        "Effect": "Allow"
      },
      {
        "Action": ["dynamodb:GetItem", "dynamodb:UpdateItem"],
        "Resource": "arn:aws:dynamodb:*:*:*",
        "Effect": "Allow"
      },
      {
        "Action": [
				"s3:GetObject",
				"s3:PutObject",
				"s3:DeleteObject",
				"s3:ListBucket",
				"s3:GetBucketLocation",
				"s3:CreateBucket"],
        "Resource": "arn:aws:s3:::*",
        "Effect": "Allow"
      }
    ]
  }
}
